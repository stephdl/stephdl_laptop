#!/bin/bash
IMAGE=$1
SERVER=$2
 # toto
if [[  -z $1 ]];then
    echo "#
# usage 
#

build the image podman and upload to the VM:
    build-podman <image-name> <user@server>
list all images available to scp
    build-podman ls"
    exit 0
fi
if [[ $1 == 'ls' ]];then
    podman images
    exit 0
fi
if [[ -z $2 ]]; then 
    echo "We have not the user@domain.com"
    exit 0
fi
if [[ -f 'build-image.sh' ]];then
    bash +x build-image.sh
    file=${1//:/_}
    podman save $1 > $file.tar
    scp $file.tar $2:/root
else
    echo "We have not found build-image.sh script"
    exit 0
fi

