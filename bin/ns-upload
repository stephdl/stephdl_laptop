dest=$1;
shift;

if [[ -z "${dest}" ]]; then
    exec 1>&2

    echo "Usage:
    $0 <destination> file1.rpm [file2.rpm ...]
    <destination> must be a valid sftp [user@]host[:dir[/]] format
    ns-upload-rpms stephdl@packages.nethserver.org:nscom/7.5.1804/testing *.rpm
    ns-upload-rpms stephdl@packages.nethserver.org:nscom/7.5.1804/nethforge *.rpm
    "
    exit 1
fi

( 
#    spool=$(mktemp -u "${USER:-upload}.XXXXXX");
    spool=$(mktemp -u "build-upload.XXXXXX");
    echo "mkdir ${spool}";
    echo "cd ${spool}";
    for F in $*;
    do
        echo "put -p $F";
    done;
    echo "cd ..";
    echo "rename ${spool} commit-${spool}" 
) | sftp -q -p -b - ${dest} | grep --color=auto '^sftp> put'
